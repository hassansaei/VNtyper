{
  "references": {
    "hg19": {
      "path": "reference/alignment/chr1.hg19.fa",
      "region": "chr1:155158000-155163000"
    },
    "hg38": {
      "path": "reference/alignment/chr1.hg38.fa",
      "region": "chr1:155184000-155194000"
    },
    "GRCh37": {
      "path": "reference/alignment/chr1.GRCh37.fna",
      "region": "1:155158000-155163000"
    },
    "GRCh38": {
      "path": "reference/alignment/chr1.GRCh38.fna",
      "region": "1:155184000-155194000"
    }
  },

  "aligners": {
    "bwa": {
      "enabled": true,
      "executable": "bwa",
      "index_files": [".amb", ".ann", ".bwt", ".pac", ".sa"],
      "alignment_command": "bwa mem -t {threads} {ref_path} {r1} {r2}",
      "threads_default": 4,
      "index_type": "in_place",
      "description": "BWA-MEM: standard short read aligner, widely used and well-tested"
    },
    "bwa-mem2": {
      "enabled": true,
      "executable": "bwa-mem2",
      "index_files": [".0123", ".amb", ".ann", ".bwt.2bit.64", ".pac"],
      "alignment_command": "bwa-mem2 mem -t {threads} {ref_path} {r1} {r2}",
      "threads_default": 4,
      "index_type": "in_place",
      "description": "BWA-MEM2: 1.3-3x faster than BWA-MEM, drop-in replacement"
    },
    "minimap2": {
      "enabled": true,
      "executable": "minimap2",
      "index_files": [".mmi"],
      "alignment_command": "minimap2 -ax sr -t {threads} {index_path} {r1} {r2}",
      "index_path_pattern": "{ref_path}.mmi",
      "threads_default": 4,
      "index_type": "separate_file",
      "description": "Minimap2: versatile aligner, fast for both short and long reads"
    },
    "bowtie2": {
      "enabled": true,
      "executable": "bowtie2",
      "index_files": [".1.bt2", ".2.bt2", ".3.bt2", ".4.bt2", ".rev.1.bt2", ".rev.2.bt2"],
      "alignment_command": "bowtie2 -x {index_base} -1 {r1} -2 {r2} --threads {threads}",
      "index_base_pattern": "{ref_dir}/{ref_stem}_bowtie2",
      "threads_default": 4,
      "index_type": "index_base",
      "description": "Bowtie2: memory-efficient, very accurate aligner"
    },
    "dragmap": {
      "enabled": false,
      "executable": "dragen-os",
      "index_dir_pattern": "{ref_dir}/{ref_stem}_dragmap_index",
      "index_files": ["hash_table.cfg", "hash_table.cfg.bin", "hash_table.cmp", "reference.bin"],
      "alignment_command": "dragen-os -r {index_dir} -1 {r1} -2 {r2} --num-threads {threads}",
      "threads_default": 8,
      "index_type": "index_directory",
      "description": "DRAGMAP: DRAGEN-compatible mapper, highest accuracy (resource intensive)"
    }
  },

  "forbidden_strings_file": "forbidden_strings.txt",

  "alignment_settings": {
    "default_threads": 4,
    "samtools_threads": 4,
    "pipe_to_samtools": true,
    "sort_output": true,
    "index_output": true
  }
}
