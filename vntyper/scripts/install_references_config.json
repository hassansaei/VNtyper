{
  "md5_chunk_size": 4096,

  "aligners": {
    "bwa": {
      "enabled": true,
      "executable": "bwa",
      "index_command": "bwa index {ref_path}",
      "index_files": [".amb", ".ann", ".bwt", ".pac", ".sa"],
      "alignment_command": "bwa mem -t {threads} {ref_path} {r1} {r2}",
      "threads_default": 4,
      "supports_threading": false,
      "index_in_place": true,
      "description": "BWA-MEM: standard short read aligner, widely used and well-tested"
    },
    "bwa-mem2": {
      "enabled": true,
      "executable": "bwa-mem2",
      "index_command": "bwa-mem2 index {ref_path}",
      "index_files": [".0123", ".amb", ".ann", ".bwt.2bit.64", ".pac"],
      "alignment_command": "bwa-mem2 mem -t {threads} {ref_path} {r1} {r2}",
      "threads_default": 4,
      "supports_threading": false,
      "index_in_place": true,
      "description": "BWA-MEM2: 1.3-3x faster than BWA-MEM, drop-in replacement with same accuracy"
    },
    "minimap2": {
      "enabled": true,
      "executable": "minimap2",
      "index_command": "minimap2 -d {ref_path}.mmi {ref_path}",
      "index_files": [".mmi"],
      "alignment_command": "minimap2 -ax sr -t {threads} {ref_path}.mmi {r1} {r2}",
      "threads_default": 4,
      "supports_threading": true,
      "index_in_place": false,
      "description": "Minimap2: versatile aligner, fast for both short and long reads (using sr preset)"
    },
    "bowtie2": {
      "enabled": true,
      "executable": "bowtie2-build",
      "index_command": "bowtie2-build --threads {threads} {ref_path} {index_base}",
      "index_files": [".1.bt2", ".2.bt2", ".3.bt2", ".4.bt2", ".rev.1.bt2", ".rev.2.bt2"],
      "alignment_command": "bowtie2 -x {index_base} -1 {r1} -2 {r2} --threads {threads}",
      "threads_default": 4,
      "supports_threading": true,
      "index_in_place": false,
      "requires_index_base": true,
      "description": "Bowtie2: memory-efficient, very accurate, good for diverse read lengths"
    },
    "dragmap": {
      "enabled": false,
      "executable": "dragen-os",
      "index_command": "dragen-os --build-hash-table true --ht-reference {ref_path} --output-directory {index_dir} --num-threads {threads}",
      "index_dir_required": true,
      "index_files": ["hash_table.cfg", "hash_table.cfg.bin", "hash_table.cmp", "hash_table_stats.txt", "reference.bin", "ref_index.bin", "repeat_mask.bin", "str_table.bin"],
      "alignment_command": "dragen-os -r {index_dir} -1 {r1} -2 {r2} --num-threads {threads}",
      "threads_default": 8,
      "supports_threading": true,
      "index_in_place": false,
      "description": "DRAGMAP: DRAGEN-compatible mapper, highest accuracy but resource intensive (disabled by default)"
    }
  },

  "bwa_path": "bwa",

  "ucsc_references": {
    "hg19": {
      "url": "https://hgdownload.soe.ucsc.edu/goldenPath/hg19/chromosomes/chr1.fa.gz",
      "target_path": "alignment/chr1.hg19.fa.gz",
      "index_command": "bwa index {path}"
    },
    "hg38": {
      "url": "https://hgdownload.soe.ucsc.edu/goldenPath/hg38/chromosomes/chr1.fa.gz",
      "target_path": "alignment/chr1.hg38.fa.gz",
      "index_command": "bwa index {path}"
    }
  },

  "ncbi_references": {
    "GRCh37": {
      "url": "https://ftp.ncbi.nlm.nih.gov/genomes/refseq/vertebrate_mammalian/Homo_sapiens/all_assembly_versions/GCF_000001405.25_GRCh37.p13/GCF_000001405.25_GRCh37.p13_assembly_structure/Primary_Assembly/assembled_chromosomes/FASTA/chr1.fna.gz",
      "target_path": "alignment/chr1.GRCh37.fna.gz",
      "index_command": "bwa index {path}",
      "description": "NCBI GRCh37.p13 chromosome 1 (uses '1' not 'chr1' in FASTA header)"
    },
    "GRCh38": {
      "url": "https://ftp.ncbi.nlm.nih.gov/genomes/refseq/vertebrate_mammalian/Homo_sapiens/all_assembly_versions/GCF_000001405.40_GRCh38.p14/GCF_000001405.40_GRCh38.p14_assembly_structure/Primary_Assembly/assembled_chromosomes/FASTA/chr1.fna.gz",
      "target_path": "alignment/chr1.GRCh38.fna.gz",
      "index_command": "bwa index {path}",
      "description": "NCBI GRCh38.p14 chromosome 1 (uses '1' not 'chr1' in FASTA header)"
    }
  },

  "vntyper_references": {
    "vntr_db_advntr": {
      "url": "https://raw.githubusercontent.com/hassansaei/VNtyper/refs/heads/main/reference/vntr_db_advntr.zip",
      "target_path": "vntr_db_advntr.zip",
      "extract_to": "."
    }
  },

  "own_repository_references": {
    "raw_files": [
      {
        "url": "https://raw.githubusercontent.com/hassansaei/VNtyper/main/reference/All_Pairwise_and_Self_Merged_MUC1_motifs_filtered.fa",
        "target_path": "All_Pairwise_and_Self_Merged_MUC1_motifs_filtered.fa",
        "index_command": "samtools faidx {path}"
      },
      {
        "url": "https://raw.githubusercontent.com/hassansaei/VNtyper/main/reference/MUC1_motifs_Rev_com.fa",
        "target_path": "MUC1_motifs_Rev_com.fa",
        "index_command": "samtools faidx {path}"
      },
      {
        "url": "https://raw.githubusercontent.com/hassansaei/VNtyper/main/reference/code-adVNTR_RUs.fa",
        "target_path": "code-adVNTR_RUs.fa",
        "index_command": "samtools faidx {path}"
      }
    ]
  }
}
